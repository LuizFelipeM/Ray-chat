{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend of Ray Chat, a simple chat app for study.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "node --inspect=5858 -r ts-node/register -r dotenv-safe/config ./src/server.ts",
    "start:watch": "nodemon",
    "knex:migrate:make": "knex --knexfile ./knexfile.ts -x ts migrate:make",
    "knex:migrate:latest": "knex --knexfile ./knexfile.ts migrate:latest",
    "knex:migrate:rollback": "knex --knexfile ./knexfile.ts migrate:rollback"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuizFelipeM/Ray-chat.git"
  },
  "keywords": [
    "ray",
    "chat",
    "ray",
    "chat",
    "message",
    "nodesjs",
    "node",
    "ts",
    "typescript",
    "javascript"
  ],
  "author": "Luiz Felipe Muniz Moura",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LuizFelipeM/Ray-chat/issues"
  },
  "homepage": "https://github.com/LuizFelipeM/Ray-chat#readme",
  "dependencies": {
    "bcrypt": "^4.0.1",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "jsonschema": "^1.2.6",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.0",
    "pg": "^8.1.0",
    "redis": "^3.0.2",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv-safe": "^8.1.0",
    "@types/express": "^4.17.6",
    "@types/jsonschema": "^1.1.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/pg": "^7.14.3",
    "@types/redis": "^2.8.18",
    "@types/socket.io": "^2.1.4",
    "nodemon": "^2.0.3",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.0",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
