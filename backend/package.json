{
  "name": "simple-chat",
  "version": "1.0.0",
  "description": "Simple chat using NodeJS, React and React Native + TS",
  "main": "./dist/server.js",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register -r dotenv-safe/config ./src/server.ts",
    "start:watch": "nodemon",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Luiz Felipe Muniz Moura",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^3.0.8",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "jsonschema": "^1.2.5",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.18.1",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv-safe": "^8.1.0",
    "@types/express": "^4.17.2",
    "@types/jsonschema": "^1.1.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/pg": "^7.14.1",
    "@types/socket.io": "^2.1.4",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
